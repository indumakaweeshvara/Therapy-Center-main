<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="editProfileAnchor" prefHeight="466.0" prefWidth="632.0" style="-fx-background-color: #9FB1C9;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.EditUserProfileController" >

    <VBox spacing="15" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="30.0">
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e467b;" text="Edit User Profile" AnchorPane.topAnchor="30.0" />

        <Label style="-fx-text-fill: #1e467b;" text="Username" />
        <TextField fx:id="usernameField" focusTraversable="false" promptText="Enter username" style="-fx-background-color: white; -fx-border-color: #4b89dc; -fx-border-radius: 5px;" />

        <Label style="-fx-text-fill: #1e467b;" text="Full Name" />
        <TextField fx:id="fullNameField" focusTraversable="false" promptText="Enter full name" style="-fx-background-color: white; -fx-border-color: #4b89dc; -fx-border-radius: 5px;" />

        <Label style="-fx-text-fill: #1e467b;" text="Email" />
        <TextField fx:id="emailField" cacheShape="false" promptText="Enter email address" style="-fx-background-color: white; -fx-border-color: #4b89dc; -fx-border-radius: 5px;" />

        <Label style="-fx-text-fill: #1e467b;" text="Password" />
        <PasswordField fx:id="passwordField" focusTraversable="false" promptText="Enter new password" style="-fx-background-color: white; -fx-border-color: #4b89dc; -fx-border-radius: 5px;" />

        <HBox spacing="20" AnchorPane.bottomAnchor="30.0">
            <Button onAction="#handleResetAction" style="-fx-background-color: #4b89dc; -fx-text-fill: white; -fx-background-radius: 5px;" text="Reset" />

            <Button onAction="#handleUpdateAction" style="-fx-background-color: #1e467b; -fx-text-fill: white; -fx-background-radius: 5px;" text="Update Profile" />
        </HBox>
    </VBox>
</AnchorPane>
